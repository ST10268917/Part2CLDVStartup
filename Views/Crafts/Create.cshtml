@model Part2.Models.Craft

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Craft</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CraftName" class="control-label"></label>
                <input asp-for="CraftName" class="form-control" />
                <span asp-validation-for="CraftName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imgUrl" class="control-label">Image</label>
                <input type="file" class="form-control" name="imageFile" />
            </div>
            <div class="form-group">
                <label asp-for="CraftDescription" class="control-label"></label>
                <input asp-for="CraftDescription" class="form-control" />
                <span asp-validation-for="CraftDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to My Work</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
